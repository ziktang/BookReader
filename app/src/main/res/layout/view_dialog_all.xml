<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:clickable="true"
    >

    <LinearLayout
        android:id="@+id/background_ll"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/bg_black"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <SeekBar
                android:id="@+id/bright_bar"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/default_light"
                android:layout_width="60dp"
                android:layout_height="@dimen/operate_text_height"
                android:layout_marginLeft="20dp"
                android:background="@drawable/dialog_button_un_select_shape"
                android:gravity="center"
                android:text="系统"
                android:textColor="@color/icon_white"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <example.tctctc.com.tybookreader.view.CircleView
                android:id="@+id/white_bg"
                android:layout_width="@dimen/bg_color_select_item_radius"
                android:layout_height="@dimen/bg_color_select_item_radius"
                app:innerColor="@color/read_white"
                app:mBorderColor="@color/white"
                app:mBorderWidth="0.5dp"
                app:type="@string/circle"
                />

            <example.tctctc.com.tybookreader.view.CircleView
                android:id="@+id/gray_bg"
                android:layout_width="@dimen/bg_color_select_item_radius"
                android:layout_height="@dimen/bg_color_select_item_radius"
                android:layout_marginLeft="@dimen/dialog_marginLeft"
                app:innerColor="@color/read_gray"
                app:mBorderColor="@color/white"
                app:mBorderWidth="0.5dp"
                app:type="@string/circle"
                />

            <example.tctctc.com.tybookreader.view.CircleView
                android:id="@+id/yellow_bg"
                android:layout_width="@dimen/bg_color_select_item_radius"
                android:layout_height="@dimen/bg_color_select_item_radius"
                android:layout_marginLeft="@dimen/dialog_marginLeft"
                app:innerColor="@color/read_yellow"
                app:mBorderColor="@color/white"
                app:mBorderWidth="0.5dp"
                app:type="@string/circle"
                />

            <example.tctctc.com.tybookreader.view.CircleView
                android:id="@+id/green_bg"
                android:layout_width="@dimen/bg_color_select_item_radius"
                android:layout_height="@dimen/bg_color_select_item_radius"
                android:layout_marginLeft="@dimen/dialog_marginLeft"
                app:innerColor="@color/read_green"
                app:mBorderColor="@color/white"
                app:mBorderWidth="0.5dp"
                app:type="@string/circle"
                />

            <example.tctctc.com.tybookreader.view.CircleView
                android:id="@+id/night_bg"
                android:layout_width="@dimen/bg_color_select_item_radius"
                android:layout_height="@dimen/bg_color_select_item_radius"
                android:layout_marginLeft="@dimen/dialog_marginLeft"
                app:innerColor="@color/read_night"
                app:mBorderColor="@color/white"
                app:mBorderWidth="0.5dp"
                app:type="@string/circle"
                />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/font_ll"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/bg_black"
        android:orientation="vertical"
        android:padding="@dimen/dialog_padding"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            >

            <TextView
                android:id="@+id/sub_fontSize"
                style="@style/read_operate_text"
                android:layout_height="@dimen/operate_text_height"
                android:background="@drawable/button_click_shape"
                android:text="&#xe746;"
                android:textColor="@color/icon_white"
                />

            <TextView
                android:id="@+id/fontSize_num"
                style="@style/read_operate_text"
                android:text="24"
                android:textColor="@color/icon_white"
                />

            <TextView
                android:id="@+id/add_fontSize"
                style="@style/read_operate_text"
                android:layout_height="@dimen/operate_text_height"
                android:background="@drawable/button_click_shape"
                android:text="&#xe679;"
                android:textColor="@color/icon_white"
                android:textSize="@dimen/text_size_14"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <example.tctctc.com.tybookreader.view.SelectTextView
                android:id="@+id/fontType1"
                style="@style/read_operate_text"
                android:layout_height="@dimen/operate_text_height"
                android:background="@drawable/dialog_button_un_select_shape"
                android:text="字体1"
                android:textColor="@color/icon_white"
                />

            <example.tctctc.com.tybookreader.view.SelectTextView
                android:id="@+id/fontType2"
                style="@style/read_operate_text"
                android:layout_height="@dimen/operate_text_height"
                android:layout_marginLeft="15dp"
                android:background="@drawable/dialog_button_un_select_shape"
                android:text="字体2"
                android:textColor="@color/icon_white"
                />

            <example.tctctc.com.tybookreader.view.SelectTextView
                android:id="@+id/fontType3"
                style="@style/read_operate_text"
                android:layout_height="@dimen/operate_text_height"
                android:layout_marginLeft="15dp"
                android:background="@drawable/dialog_button_un_select_shape"
                android:text="繁体"
                android:textColor="@color/icon_white"
                />

            <example.tctctc.com.tybookreader.view.SelectTextView
                android:id="@+id/font_default_type"
                style="@style/read_operate_text"
                android:layout_height="@dimen/operate_text_height"
                android:layout_marginLeft="15dp"
                android:background="@drawable/dialog_button_un_select_shape"
                android:text="@string/str_default"
                android:textColor="@color/icon_white"
                />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/page_turn_ll"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/bg_black"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/dialog_padding"
        android:visibility="gone"
        >

        <!--<example.tctctc.com.tybookreader.view.SelectTextView-->
        <!--android:id="@+id/turn_pager"-->
        <!--style="@style/read_operate_text"-->
        <!--android:layout_height="@dimen/operate_text_height"-->
        <!--android:background="@drawable/dialog_button_un_select_shape"-->
        <!--android:text="仿真"-->
        <!--/>-->

        <example.tctctc.com.tybookreader.view.SelectTextView
            android:id="@+id/turn_slide"
            style="@style/read_operate_text"
            android:layout_height="@dimen/operate_text_height"
            android:layout_marginLeft="15dp"
            android:background="@drawable/dialog_button_un_select_shape"
            android:text="平滑"
            />

        <example.tctctc.com.tybookreader.view.SelectTextView
            android:id="@+id/turn_cover"
            style="@style/read_operate_text"
            android:layout_height="@dimen/operate_text_height"
            android:layout_marginLeft="15dp"
            android:background="@drawable/dialog_button_un_select_shape"
            android:text="覆盖"
            />

        <example.tctctc.com.tybookreader.view.SelectTextView
            android:id="@+id/turn_no"
            style="@style/read_operate_text"
            android:layout_height="@dimen/operate_text_height"
            android:layout_marginLeft="15dp"
            android:background="@drawable/dialog_button_un_select_shape"
            android:text=" 无 "
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_black"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/read_progress_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textColor="@color/icon_white"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                >

                <TextView
                    android:id="@+id/last_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10"
                    android:text="@string/str_pre_chapter"
                    android:textColor="@color/icon_white"
                    />

                <SeekBar
                    android:id="@+id/read_progress_bar"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    >

                </SeekBar>


                <TextView
                    android:id="@+id/next_chapter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/padding_10"
                    android:text="@string/str_next_chapter"
                    android:textColor="@color/icon_white"
                    />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/directory"
                style="@style/read_operate_text"
                android:padding="@dimen/padding_10"
                android:text="&#xe619;"
                android:textColor="@color/icon_white"
                />

            <TextView
                android:id="@+id/font"
                style="@style/read_operate_text"
                android:padding="@dimen/padding_10"
                android:text="&#xe60e;"
                android:textColor="@color/icon_white"
                />

            <TextView
                android:id="@+id/background"
                style="@style/read_operate_text"
                android:padding="@dimen/padding_10"
                android:text="&#xe63d;"
                android:textColor="@color/icon_white"
                />

            <TextView
                android:id="@+id/page_turn"
                style="@style/read_operate_text"
                android:padding="@dimen/padding_10"
                android:text="&#xe62e;"
                android:textColor="@color/icon_white"
                />

            <TextView
                android:id="@+id/set"
                style="@style/read_operate_text"
                android:padding="@dimen/padding_10"
                android:text="&#xe66d;"
                android:textColor="@color/icon_white"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>