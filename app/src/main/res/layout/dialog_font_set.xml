<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="150dp"
              android:background="@color/bg_black"
              android:orientation="vertical"
              android:padding="@dimen/dialog_padding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >

        <TextView
            android:id="@+id/sub_fontSize"
            style="@style/read_operate_text"
            android:layout_height="@dimen/operate_text_height"
            android:background="@drawable/button_click_shape"
            android:text="&#xe746;"
            android:textColor="@color/icon_white"
            />

        <TextView
            android:id="@+id/fontSize_num"
            style="@style/read_operate_text"
            android:text="24"
            android:textColor="@color/icon_white"
            />

        <TextView
            android:id="@+id/add_fontSize"
            style="@style/read_operate_text"
            android:layout_height="@dimen/operate_text_height"
            android:background="@drawable/button_click_shape"
            android:text="&#xe679;"
            android:textColor="@color/icon_white"
            android:textSize="@dimen/text_size_14"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <example.tctctc.com.tybookreader.view.SelectTextView
            android:id="@+id/fontType1"
            style="@style/read_operate_text"
            android:layout_height="@dimen/operate_text_height"
            android:text="繁体"
            android:textColor="@color/icon_white"
            android:background="@drawable/dialog_button_un_select_shape"
            />

        <example.tctctc.com.tybookreader.view.SelectTextView
            android:id="@+id/fontType2"
            style="@style/read_operate_text"
            android:layout_height="@dimen/operate_text_height"
            android:layout_marginLeft="15dp"
            android:text="繁体"
            android:textColor="@color/icon_white"
            android:background="@drawable/dialog_button_un_select_shape"
            />

        <example.tctctc.com.tybookreader.view.SelectTextView
            android:id="@+id/fontType3"
            style="@style/read_operate_text"
            android:layout_height="@dimen/operate_text_height"
            android:layout_marginLeft="15dp"
            android:text="繁体"
            android:textColor="@color/icon_white"
            android:background="@drawable/dialog_button_un_select_shape"
            />

        <example.tctctc.com.tybookreader.view.SelectTextView
            android:id="@+id/font_default_type"
            style="@style/read_operate_text"
            android:layout_height="@dimen/operate_text_height"
            android:layout_marginLeft="15dp"
            android:text="@string/str_default"
            android:textColor="@color/icon_white"
            android:background="@drawable/dialog_button_un_select_shape"
            />
    </LinearLayout>


</LinearLayout>